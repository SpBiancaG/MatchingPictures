<Window x:Class="MatchingPictures.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchingPictures.Views"
        mc:Ignorable="d"
        Title="About" Height="240" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >
    <Window.Background>
        <ImageBrush ImageSource="D:\MVP labs\MatchingPictures\MatchingPictures\Assets\BackgroundImage.png"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="stackPanel">
            <TextBlock x:Name="programmersNameTextBlock" FontSize="30"></TextBlock>
            <TextBlock x:Name="numberOfProcessorsTextBlock" FontSize="15"></TextBlock>
            <TextBlock x:Name="osVersionTextBlock" FontSize="15"></TextBlock>
        </StackPanel>
        <Button Grid.Row="1" Content="Ok" FontFamily="Papyrus" FontSize="20" Click="OkButtonClick" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,95,0,0" Height="39" Width="100"></Button>
    </Grid>
</Window>
